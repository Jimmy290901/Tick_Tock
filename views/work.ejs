<%- include("header"); -%> 
    
    <div class="box" id="heading">
        <h1><%= title%></h1>
    </div>
    <div class="box">
        <% for (var i = 0; i < items.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= items[i] %></p>
            </div>
        <% } %>
        <form class="item" action=<%= postTo %> method="post">
            <input type="text" name="todo_item" placeholder="New item todo" autocomplete="off">
            <button type="submit" name="submit">+</button>
        </form>
    </div>

<%- include("footer"); -%>